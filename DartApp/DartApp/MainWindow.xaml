<Window x:Class="DartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
		<Button x:Name="button1" Command="{Binding Path=HolidayCommand}" Content="Holiday" FontSize="28" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="300" Height="100"/>
		<Button x:Name="button2" Command="{Binding Path=TrainingCommand}" Content="Training" FontSize="28" HorizontalAlignment="Left" Margin="355,50,0,0" VerticalAlignment="Top" Width="300" Height="100"/>
		<Button x:Name="button3" Command="{Binding Path=VdsvCommand}" Content="VDSV" FontSize="28" HorizontalAlignment="Left" Margin="50,155,0,0" VerticalAlignment="Top" Width="605" Height="100"/>
		<Label Name="Label1" Content="{Binding Path=State}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,0,10,10" Height="28"></Label>
	</Grid>
</Window>
