<UserControl x:Class="DartApp.HomeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartApp"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
	<Grid>
		<Button x:Name="button1" Command="{Binding Path=HolidayCommand}" Content="Holiday" FontSize="28" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="300" Height="150"/>
