		<Button x:Name="button3" Command="{Binding Path=VdsvCommand}" Content="VDSV" FontSize="28" HorizontalAlignment="Left" Margin="50,205,0,0" VerticalAlignment="Top" Width="300" Height="150"/>
		<Button x:Name="button4" Command="{Binding Path=DataBaseCommand}" Content="Datenbank" FontSize="28" HorizontalAlignment="Left" Margin="355,205,0,0" VerticalAlignment="Top" Width="300" Height="150"/>
	</Grid>
</UserControl>
