<UserControl x:Class="DartApp.Club.Tournament.TournamentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="8*"/>
			<ColumnDefinition Width="3*"/>
		</Grid.ColumnDefinitions>
		<ContentPresenter Content="{Binding Path=TournamentPlan}" Margin="0,0,2,0"/>
		<Rectangle Fill="Black" Width="2" HorizontalAlignment="Right" />
		<Label Content="Spiele" FontSize="16" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" />
		<Button Content="Rückgängig" Grid.Column="1" Width="100" Command="{Binding Path=UndoCommand}" Margin="5,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></Button>
		<ScrollViewer Grid.Column="1" Margin="0,60,0,50">
			<ItemsControl ItemsSource="{Binding Path=Matches}" />
		</ScrollViewer>
		<Button Content="Abbrechen" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Command="{Binding Path=CancelCommand}" Margin="5,0,0,10"/>
		<Button Content="Speichern" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Command="{Binding Path=SaveCommand}" Margin="0,0,5,10"/>
	</Grid>
</UserControl>
