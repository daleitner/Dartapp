<Window x:Class="DartApp.Database.EditDialogs.EditHolidayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:select="clr-namespace:DartApp.Database.Selection"
        Title="EditHolidayWindow" Height="400" Width="600">
    <Grid>
		<select:ItemSelection DataContext="{Binding Path=ItemSelection}" Margin="0,0,0,35"/>
		<Button Content="Abbrechen" Height="25" Name="Button1" HorizontalAlignment="Right" Margin="0,0,110,5" VerticalAlignment="Bottom" Width="90" Command="{Binding Path=CancelCommand}" FontSize="14" TabIndex="1" />
		<Button Content="Speichern" Height="25" HorizontalAlignment="Right" Margin="0,0,10,5" Name="button2" VerticalAlignment="Bottom" Width="90" Command="{Binding Path=SaveCommand}" FontSize="14" TabIndex="2" />
	</Grid>
</Window>
